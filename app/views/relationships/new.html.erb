<div class="box">
  <div class="box-contents text-center">
    <h5>キニナル人を登録 <i class="fas fa-user-plus" style="color: rgba(149,179,255,0.98);"></i></h5>
    <p>Twioffに登録していてかつTwitterでフォローしている人が表示されます。</p>
    <p>シェアする</p>
    <%= render "shared/twitter_share_button" %>
  </div>
</div>
<%- @friends.each do |friend| %>

  <div class="box">
    <div class="box-contents" style="display: flex">
      <div class="friend-box">
        <%= image_tag friend.image.gsub("_normal", ""), size: 50, class: "img-responsive-overwrite", align: "middle" %>
        <span><%= friend.name %></span>
      </div>

      <%- if !current_user.following?(friend) %>
        <%= form_for(current_user.active_relationships.build(followed_id: friend.id)) do |f| %>
          <div><%= f.hidden_field :followed_id %></div>
          <%= f.submit "キニナル", data: { confirm: "#{friend.name}さんを登録します"}, class: "square_btn " %>
        <% end %>
      <%- elsif friend.following?(current_user) %>
        <button disabled class="square_disable_btn">登録済</button>
      <%- else %>
        <%= form_for(current_user.active_relationships.find_by(followed_id: friend.id),
                     html: { method: :delete }) do |f| %>
          <%= f.submit "解除", class: "square_btn" %>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
